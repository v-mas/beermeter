<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewmodel"
            type="com.github.vmas.beermeter.screen.beerdetails.BeerDetailsViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/content_start"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="@dimen/margin_normal" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/content_end"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_end="@dimen/margin_normal" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:contentDescription="@null"
                android:importantForAccessibility="no"
                app:imageUrl="@{viewmodel.beer.imgUrl}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="#eee" />

            <TextView
                android:id="@+id/details_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_normal"
                android:text="@{viewmodel.beer.name}"
                android:textSize="@dimen/textsize_h1"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/image"
                app:layout_constraintEnd_toStartOf="@id/details_edit_name"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="@id/content_start"
                app:layout_constraintWidth_default="wrap"
                tools:text="Name with very very very very long name" />

            <ImageView
                android:id="@+id/details_edit_name"
                style="@style/Beer.Image.Edit"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginEnd="@dimen/margin_small"
                android:contentDescription="@string/acc__edit_beer_name"
                android:onClick="@{() -> viewmodel.onEditNameClick()}"
                app:layout_constraintBottom_toBottomOf="@id/details_name"
                app:layout_constraintEnd_toStartOf="@id/details_edit_photo"
                app:layout_constraintStart_toEndOf="@id/details_name" />

            <ImageView
                android:id="@+id/details_edit_photo"
                style="@style/Beer.Image.Edit"
                android:layout_marginBottom="@dimen/margin_normal"
                android:contentDescription="@string/acc__edit_photo"
                android:onClick="@{() -> viewmodel.onEditPhotoClick()}"
                android:src="@drawable/ic_edit_photo_24"
                app:layout_constraintBottom_toBottomOf="@id/image"
                app:layout_constraintEnd_toEndOf="@id/content_end" />

            <View
                android:id="@+id/details_name_divider"
                style="@style/Beer.Divider.Horizontal"
                app:layout_constraintEnd_toEndOf="@id/content_end"
                app:layout_constraintStart_toStartOf="@id/content_start"
                app:layout_constraintTop_toBottomOf="@id/image" />

            <TextView
                android:id="@+id/details_type_label"
                style="@style/Beer.Text.Label"
                android:text="@string/details_type"
                app:layout_constraintBottom_toBottomOf="@id/details_type"
                app:layout_constraintEnd_toStartOf="@id/details_type"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="@id/content_start"
                app:layout_constraintTop_toTopOf="@id/details_type" />

            <TextView
                android:id="@+id/details_type"
                style="@style/Beer.Text.Detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/textsize_small"
                android:layout_marginTop="@dimen/margin_normal"
                android:text="@{viewmodel.beer.type}"
                app:layout_constraintEnd_toStartOf="@id/details_type_edit"
                app:layout_constraintStart_toEndOf="@id/details_type_label"
                app:layout_constraintTop_toBottomOf="@id/details_name_divider"
                tools:text="Lager\njasny" />

            <ImageView
                android:id="@+id/details_type_edit"
                style="@style/Beer.Image.Edit"
                android:layout_marginStart="@dimen/margin_small"
                android:contentDescription="@string/acc__edit_beer_type"
                android:onClick="@{() -> viewmodel.onEditTypeClick()}"
                app:layout_constraintBottom_toBottomOf="@id/details_type"
                app:layout_constraintEnd_toEndOf="@id/content_end"
                app:layout_constraintStart_toEndOf="@id/details_type"
                app:layout_constraintTop_toTopOf="@id/details_type" />

            <View
                android:id="@+id/details_type_divider"
                style="@style/Beer.Divider.Horizontal"
                android:layout_marginTop="@dimen/textsize_small"
                app:layout_constraintEnd_toEndOf="@id/content_end"
                app:layout_constraintStart_toStartOf="@id/content_start"
                app:layout_constraintTop_toBottomOf="@id/details_type" />

            <TextView
                android:id="@+id/details_alk_content_label"
                style="@style/Beer.Text.Label"
                android:text="@string/details_alko_content"
                app:layout_constraintBottom_toBottomOf="@id/details_alk_content"
                app:layout_constraintEnd_toStartOf="@id/details_alk_content"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="@id/content_start"
                app:layout_constraintTop_toTopOf="@id/details_alk_content" />

            <TextView
                android:id="@+id/details_alk_content"
                style="@style/Beer.Text.Detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/textsize_small"
                android:layout_marginTop="@dimen/margin_normal"
                app:layout_constraintEnd_toStartOf="@id/details_alk_content_edit"
                app:layout_constraintStart_toEndOf="@id/details_alk_content_label"
                app:layout_constraintTop_toBottomOf="@id/details_type_divider"
                app:textPercentage="@{viewmodel.beer.percentage}"
                tools:text="10%" />

            <ImageView
                android:id="@+id/details_alk_content_edit"
                style="@style/Beer.Image.Edit"
                android:layout_marginStart="@dimen/margin_small"
                android:contentDescription="@string/acc__edit_alcohol_content"
                android:onClick="@{() -> viewmodel.onEditAlcoholContentClick()}"
                app:layout_constraintBottom_toBottomOf="@id/details_alk_content"
                app:layout_constraintEnd_toEndOf="@id/content_end"
                app:layout_constraintStart_toEndOf="@id/details_alk_content"
                app:layout_constraintTop_toTopOf="@id/details_alk_content" />

            <View
                android:id="@+id/details_alk_content_divider"
                style="@style/Beer.Divider.Horizontal"
                android:layout_marginTop="@dimen/textsize_small"
                app:layout_constraintEnd_toEndOf="@id/content_end"
                app:layout_constraintStart_toStartOf="@id/content_start"
                app:layout_constraintTop_toBottomOf="@id/details_alk_content" />

            <TextView
                android:id="@+id/details_country_label"
                style="@style/Beer.Text.Label"
                android:text="@string/details_country"
                app:layout_constraintBottom_toBottomOf="@id/details_country"
                app:layout_constraintEnd_toStartOf="@id/details_country"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="@id/content_start"
                app:layout_constraintTop_toTopOf="@id/details_country" />

            <TextView
                android:id="@+id/details_country"
                style="@style/Beer.Text.Detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/textsize_small"
                android:layout_marginTop="@dimen/margin_normal"
                android:text="@{viewmodel.beer.country}"
                app:layout_constraintEnd_toStartOf="@id/details_country_edit"
                app:layout_constraintStart_toEndOf="@id/details_country_label"
                app:layout_constraintTop_toBottomOf="@id/details_alk_content_divider"
                tools:text="Poland" />

            <ImageView
                android:id="@+id/details_country_edit"
                style="@style/Beer.Image.Edit"
                android:layout_marginStart="@dimen/margin_small"
                android:contentDescription="@string/acc__edit_country"
                android:onClick="@{() -> viewmodel.onEditCountryClick()}"
                app:layout_constraintBottom_toBottomOf="@id/details_country"
                app:layout_constraintEnd_toEndOf="@id/content_end"
                app:layout_constraintStart_toEndOf="@id/details_country"
                app:layout_constraintTop_toTopOf="@id/details_country" />

            <View
                android:id="@+id/details_country_divider"
                style="@style/Beer.Divider.Horizontal"
                android:layout_marginTop="@dimen/textsize_small"
                app:layout_constraintEnd_toEndOf="@id/content_end"
                app:layout_constraintStart_toStartOf="@id/content_start"
                app:layout_constraintTop_toBottomOf="@id/details_country" />

            <View
                android:onClick="@{() -> viewmodel.onWebsiteClick()}"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/details_country_divider"
                app:layout_constraintBottom_toTopOf="@id/details_website_divider"
                android:background="?selectableItemBackground" />

            <TextView
                android:id="@+id/details_website_label"
                style="@style/Beer.Text.Label"
                android:text="@string/details_website"
                app:layout_constraintBottom_toBottomOf="@id/details_website"
                app:layout_constraintEnd_toStartOf="@id/details_website"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="@id/content_start"
                app:layout_constraintTop_toTopOf="@id/details_website" />

            <TextView
                android:id="@+id/details_website"
                style="@style/Beer.Text.Detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/textsize_small"
                android:layout_marginTop="@dimen/margin_normal"
                android:text="@{viewmodel.beer.website}"
                app:layout_constraintEnd_toStartOf="@id/details_website_edit"
                app:layout_constraintStart_toEndOf="@id/details_website_label"
                app:layout_constraintTop_toBottomOf="@id/details_country_divider"
                tools:text="https://github.com/v-mas" />

            <ImageView
                android:id="@+id/details_website_edit"
                style="@style/Beer.Image.Edit"
                android:layout_marginStart="@dimen/margin_small"
                android:contentDescription="@string/acc__edit_website"
                android:onClick="@{() -> viewmodel.onEditWebsiteClick()}"
                app:layout_constraintBottom_toBottomOf="@id/details_website"
                app:layout_constraintEnd_toEndOf="@id/content_end"
                app:layout_constraintStart_toEndOf="@id/details_website"
                app:layout_constraintTop_toTopOf="@id/details_website" />

            <View
                android:id="@+id/details_website_divider"
                style="@style/Beer.Divider.Horizontal"
                android:layout_marginTop="@dimen/textsize_small"
                app:layout_constraintEnd_toEndOf="@id/content_end"
                app:layout_constraintStart_toStartOf="@id/content_start"
                app:layout_constraintTop_toBottomOf="@id/details_website" />

            <ImageView
                android:id="@+id/details_edit_global"
                style="@style/Beer.Image.Edit"
                android:layout_marginTop="@dimen/margin_normal"
                android:activated="@{viewmodel.editEnabled}"
                android:contentDescription="@string/acc__edit_beer"
                android:onClick="@{() -> viewmodel.onEditClick()}"
                android:src="@drawable/ic_anim_edit_done_24"
                app:layout_constraintEnd_toEndOf="@id/content_end"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/ic_edit_24" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/details_edit_group"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="@{viewmodel.editEnabled}"
                app:constraint_referenced_ids="details_edit_photo,details_edit_name,details_type_edit,details_alk_content_edit,details_country_edit,details_website_edit"
                tools:visibility="visible" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>
